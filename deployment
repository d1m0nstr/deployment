apiVersion: apps/v1
kind: Deployment
metadata:
  name: pg-db
  namespace: pg
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pg-db
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: pg-db
      containers:
      - image: postgres:16.0
        name: psql
        env:
        - name: POSTGRES_USER
          value: "psql_user"
        - name: POSTGRES_DB
          value: "psql_db"
        - name: PGDATA
          value: "/var/lib/postgresql/data/pgdata"
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: pg-secret
              key: PASS
        imagePullPolicy: "Always"
        ports:
        - containerPort: 5432
          protocol: TCP
        resources:
          requests:
            cpu: 100m
            memory: 200Mi
          limits:
            cpu: 1000m
            memory: 2048Mi
        volumeMounts:
        - name: data
          mountPath: /var/lib/postgresql/data
      volumes:
      - name: data
        persistentVolumeClaim:
          claimName: pg-storage
